<% include ../partials/header %>
<div class="">
        <div class="col 12">
            <a href="/" class="btn btn-danger btn-lg">Cancel</a>
        </div>
    </div>
    <br>
<div class="row" style="margin:2%2%">
    
        <form action="http://localhost:3000/edit/<%= items[0].id %>" method="post" class="col 12">
            <input type="hidden" name="id" value="<%= items[0].id %>">
            
            <div class="form-group row">
                <label for="name" class="col-2 col-form-label">Name</label>
                <div class="col-10">
                    <input type="text" name="e_name" value="<%= items[0].name %>" class="form-control">
                </div>
            </div>
            
            <div class="form-group row">
                <label for="message" class="col-2 col-form-label">Message</label>
                    <div class="col-10">
                        <textarea name="e_mess" cols="30" rows="4" class="form-control"> <%= items[0].content %> </textarea>
                    </div>
            </div>
            
            <div class="form-group row">
                    <label for="post" class="col-2 col-form-label"></label>
                        <div class="col-10">
                            <input type="submit" name="submit" value="Save Message" class="btn btn-primary btn-lg">
                        </div>
                </div>
            </form>
</div>

<% include ../partials/footer %>